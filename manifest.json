{
  "manifest_version": 2,
  "name": "AsanaTabs",
  "version": "2.2.0",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "description": "Quickly view Asana tasks from the new tab page.",

  "background": {
    "persistent": true,
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "background",
    "storage",
    "cookies",
    "activeTab",
    "*://*.asana.com/*"
  ],
  "web_accessible_resources": ["icon16.png", "icon48.png", "icon128.png"]
}
